<div class ="container">
  <div class ="row">
    <div class ="col-2">
      <%=link_to"マイページに戻る",user_path(current_user) %>
      <h5>検索</h5>
      <h6>
        <%= search_form_for @q, url: search_to_dos_path do |f| %>
         <%= f.label :day_cont, '期日で調べる' %>
         <%= f.text_field :day_cont %>
        <br>
        <div class ="mt-2">
           <%= f.submit '検索' %>
        </div>
       <% end %>
      </h6>
    </div>


    <div class ="col-8 offset-2 mx-auto">
        <table class="table">
       <% @to_dos. each do |to_do| %>
      <thead>
      <tr class="table-info">
       <th><%= sort_link(@q, :day, "期日") %></th>
       <th scope="col">誰がするのか</th>
       <th scope="col">すること</th>
       <th scope="col">削除</th>
      </tr>
  </thead>
  <tbody>
     <tr scope="row">
      <td><%=to_do.day %></td>
      <td><%=to_do.user.name %></td>
      <td><%=to_do.body %></td>
      <td><%= link_to "削除",to_do_path(to_do.id), method: :delete, local: true,class: "btn btn-danger","data-confirm" => "本当に削除しますか？" %></td>
     </tr>

  </tbody>
  <% end %>
 </table>



    </div>

  </div>
</div>

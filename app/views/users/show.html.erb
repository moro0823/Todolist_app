<div class="container mt-5">
  <div class="row">
    <div class="col-4">
      <button type="button" class="btn btn-primary mb-5" data-toggle="modal" data-target="#exampleModal">
        することを登録する
　　　</button>

　　　<%= link_to "全員のすることリストを確認する", to_dos_path,class: "btn btn-info" %>
    </div>
    <div class="col-7 to_dos">
      <%= render 'to_dos/to_dos',to_dos: @to_dos %>
    </div>
  </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">登録する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%= form_with model:@to_do,remote:true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :day, "期日" %>
          <%= f.text_field :day,class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "すること" %>
          <%= f.text_area :body,class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%=f.submit "記録する",class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>